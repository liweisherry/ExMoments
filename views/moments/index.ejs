<ul>
    <% for (let moment of Moments ){%>
    <div class="card" mb-3>
        <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" alt="" src="<%=moment.image%>">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title" ><%= moment.title%></h5>
                    <p class="card-text" ><%= moment.description%></p>
                    <p class="card-text" >
                        <small class="text-muted"><%=moment.location%></small>
                    </p>
                    <a class="btm btm-primary" href="/moments/<%=moment._id%>">View <%=moment.title%></a>
                </div>
            </div>
        </div>
    </div>
<!--    <li><a href="/moments/<%= moment._id %>"><%= moment.title %></a></li>-->
    <% }%>
</ul>
